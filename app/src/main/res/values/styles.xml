<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <!-- No Action Bar theme -->
    <style name="AppTheme_NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme_Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/textColorPrimary_dark</item>
        <item name="android:textColorSecondary">@color/textColorSecondary_dark</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="alertDialogTheme">@style/DarkAlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/DarkBottomSheetDialog</item>
        <item name="cardViewStyle">@style/DarkCardView</item>
    </style>

    <!-- Black Glass theme with Deep Dark Blue accents -->
    <style name="AppTheme_BlackGlass" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/deep_dark_blue</item>
        <item name="colorPrimaryDark">@color/deep_dark_blue</item>
        <item name="colorAccent">@color/deep_dark_blue</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColor">@color/textColorPrimary_dark</item>
        <item name="android:textColorSecondary">@color/textColorSecondary_dark</item>
        <item name="buttonStyle">@style/BlackGlassButton</item>
        <item name="alertDialogTheme">@style/BlackGlassAlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/BlackGlassBottomSheetDialog</item>
        <item name="cardViewStyle">@style/BlackGlassCardView</item>
        <item name="toolbarStyle">@style/BlackGlassToolbar</item>
        <!-- Removed translucent flags that cause layout overlap - now handled programmatically -->
    </style>

    <!-- Black Glass No Action Bar theme - Adding this back -->
    <style name="AppTheme_BlackGlass_NoActionBar" parent="AppTheme_BlackGlass">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button style -->

    <!-- Dark Alert Dialog -->
    <style name="DarkAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_dark</item>
        <item name="android:textColor">@color/textColorPrimary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dark Bottom Sheet Dialog -->
    <style name="DarkBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_dark</item>
        <item name="android:textColor">@color/textColorPrimary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dark CardView -->
    <style name="DarkCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_dark</item>
    </style>

    <!-- Black Glass Alert Dialog -->
    <style name="BlackGlassAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/darkBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_dark</item>
        <item name="android:textColor">@color/textColorPrimary_dark</item>
        <item name="colorAccent">@color/deep_dark_blue</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimary">@color/deep_dark_blue</item>
    </style>

    <!-- Black Glass Bottom Sheet Dialog -->
    <style name="BlackGlassBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@color/darkBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_dark</item>
        <item name="android:textColor">@color/textColorPrimary_dark</item>
        <item name="colorAccent">@color/deep_dark_blue</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimary">@color/deep_dark_blue</item>
    </style>

    <!-- Black Glass Button with Deep Dark Blue -->
    <style name="BlackGlassButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/deep_dark_blue</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/deep_dark_blue_lighter</item>
    </style>

    <!-- Black Glass CardView -->
    <style name="BlackGlassCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/darkBackground</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <!-- Black Glass Toolbar with Deep Dark Blue -->
    <style name="BlackGlassToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/deep_dark_blue</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleStyle</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Toolbar Subtitle Style -->
    <style name="ToolbarSubtitleStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!-- Custom theme base - ensures all attributes are properly defined -->
    <style name="AppTheme_Custom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        
        <!-- Material Design 3 color attributes required by ColorWheelActivity layout -->
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <item name="colorOnSurfaceVariant">@color/textColorSecondary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Ensure proper text appearance attributes -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>
    </style>

    <!-- Dark theme NoActionBar variant -->
    <style name="AppTheme_Dark_NoActionBar" parent="AppTheme_Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- System theme - follows Android system dark/light mode -->
    <style name="AppTheme_System" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <!-- System theme NoActionBar variant -->
    <style name="AppTheme_System_NoActionBar" parent="AppTheme_System">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>








