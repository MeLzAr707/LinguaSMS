<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="60dp"
    android:paddingLeft="60dp"
    android:paddingEnd="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/message_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Original message text (shown when translation is active) -->
            <TextView
                android:id="@+id/original_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:alpha="0.7"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="gone"
                tools:text="Original: This is an outgoing message" />

            <!-- Main message text (original or translated) -->
            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                tools:text="This is an outgoing message" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_gravity="end">

                <TextView
                    android:id="@+id/message_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:textSize="12sp"
                    tools:text="12:34 PM" />

                <ImageButton
                    android:id="@+id/translate_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/translate"
                    android:src="@drawable/ic_translate"
                    android:tint="@color/white" />

                <ImageButton
                    android:id="@+id/secret_decode_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/secret_decoded_title"
                    android:src="@android:drawable/ic_menu_view"
                    android:tint="@color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Secret message text (shown when decoded) -->
            <TextView
                android:id="@+id/secret_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"
                android:background="@drawable/message_input_background"
                android:padding="6dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                tools:text="Secret: Hidden message!" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/reactions_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="@id/message_card"
        app:layout_constraintTop_toBottomOf="@id/message_card"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:id="@+id/reactions_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">
            <!-- Reaction items will be added here dynamically -->
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>