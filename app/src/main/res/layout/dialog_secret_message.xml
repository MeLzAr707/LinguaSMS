<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/secret_message_dialog_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/visible_message_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/visible_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/visible_message_hint"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="3"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/message_input_background"
        android:padding="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/secret_message_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/secret_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/secret_message_hint"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="3"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/message_input_background"
        android:padding="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The secret message will be hidden using invisible characters within the visible message."
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

</LinearLayout>