<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design default colors for dark theme -->
    <color name="purple_200">#23023d</color>
    <color name="purple_500">#23023d</color>
    <color name="purple_700">#23023d</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>

    <!-- Dark Theme Text Colors -->
    <color name="darkTextPrimary">#FFFFFF</color>
    <color name="darkTextSecondary">#B3FFFFFF</color> <!-- 70% white -->

    <!-- Dark Theme Surface Colors -->
    <color name="darkSurfaceTranslucent">#CC121212</color> <!-- 80% opacity dark surface -->

    <!-- Override Primary Colors for Night Mode -->
    <color name="colorPrimary">#0D1A2D</color>
    <color name="colorPrimaryDark">#000000</color>
    <color name="colorAccent">#162A47</color>

    <!-- Note: Light theme colors are intentionally NOT overridden here -->
    <!-- This ensures that explicit light theme selection works regardless of system mode -->
    <!-- Only system theme (THEME_SYSTEM) should use night mode overrides -->

    <!-- Dark Theme Colors (Same in Night Mode) -->
    <color name="background_dark">#121212</color>
    <!-- Selection Colors -->
    <color name="colorSelectedItem">#1A237E</color> <!-- Dark blue for selected items in night mode -->
    <!-- Background Colors -->
    <color name="lightBackground">#121212</color> <!-- Dark background for night mode -->

    <!-- Theme-aware colors for message bubbles in night mode -->
    <color name="incoming_message_background">@color/background_dark</color>

</resources>

